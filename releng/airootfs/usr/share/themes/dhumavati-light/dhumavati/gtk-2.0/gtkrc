# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#b2bfd9\nbase_color:#2f303d"
# Foreground/background
gtk-color-scheme = "fg_color:#b2bfd9\nbg_color:#3c3f4c"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#ffffff\nselected_bg_color:#3c3f4c"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#8b9cbe\ninsensitive_bg_color:#22262d"
# Menus
gtk-color-scheme = "menu_color:#3c3f4c"
# Links
gtk-color-scheme = "link_color:#8265ff\nvisited_link_color:#8b9cbe"
# Treeview headers
gtk-color-scheme = "column_header_color:#8b9cbe\nhover_column_header_color:#b2bfd9"
# Window decoration
gtk-color-scheme = "window_color:#3c3f4c"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#b2bfd9\ntooltip_bg_color:#22262d"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "hacks-dark.rc"
